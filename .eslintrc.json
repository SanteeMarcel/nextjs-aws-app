{
  "extends": "next/core-web-vitals",
  "rules": {
    "require-await": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "multiline-ternary": ["error", "always"],
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": false
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": 2,
    "object-curly-spacing": ["error", "always"]
  }
}
